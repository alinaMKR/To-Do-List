      <div class="item">
        <input type="checkbox" name="checkedItem" value="<%= newListItem._id %>" onChange="this.form.submit()">
        <p><%=  newListItem.name  %></p>
      </div>
      <input type="hidden" name="list" value="<%= listTitle %>">

    </form>
      <% }); %>



